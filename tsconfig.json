{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "bootstrap/**/*"
  ]
}
